@{
    ViewBag.Title = "Chat";
}
<link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<div class="container">
    <div class="page-header"></div>
    <div class="panel-primary">
        <div class="panel-heading">Chat</div>
        <div class="panel-body">
            <div class="row">
                <div id="chatDiv" class="col-lg-12" data-spy="scroll">

                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <textarea id="message" class="form-control"></textarea>

                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input type="button" id="sendmessage" value="Send" class="btn btn-primary" />
                        <input type="hidden" id="displayname" />
                    </div>

                </div>
                <div class="col-sm-3"><div class="form-group"><div id="newMsg"></div></div></div>
            </div>
        </div>
    </div>

</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->

    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {

                $myname = $('#displayname').val();
                if ($myname == name) {
                    $('#chatDiv').append('<div class=\'alert alert-info\'><i class="fa fa-comment"></i>  <a href="#" class="close close-sm" data-dismiss="alert" aria-label="close">&times;</a><strong>' + htmlEncode(name)
                   + '</strong>: ' + htmlEncode(message) + '</div>');
                }
                else {
                    // Add the message to the page.
                    $('#chatDiv').append('<div class=\'alert alert-success\'><i class="fa fa-comments-o"></i>  <a href="#" class="close close-sm" data-dismiss="alert" aria-label="close">&times;</a><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</div>');
                    newMessage();
                }
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                    scrollDown();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
        function newMessage() {

            $('#newMsg').empty();
            $('#newMsg').append("<div class='alert'><a href='#' class='close msg' data-dismiss='alert' onclick='scrollDown();'><i class='fa fa-envelope-o'></i> New Message Received!</a></div>");
        }
        function scrollDown() {

            $('#newMsg').empty();
            $('#chatDiv').animate({
                scrollTop: $('#chatDiv').get(0).scrollHeight
            }, 2000);
        }
    </script>
}